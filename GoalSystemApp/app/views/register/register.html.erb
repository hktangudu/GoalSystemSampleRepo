<%= form_for @user, :url => {action: "CreateUser" }, :html => {:id => "form"} do |f| %>
<!-- <fieldset style=" border:8px; border-image:url(<%= asset_path 'border2.png' %>) 15% round; "> -->

	<legend style="font-weight:bold ;font-size:18px">New Registration Information</legend>


<table>
<tr>
  <td style="font-weight:bold; font-size:15px "><%= f.label "Name" %></td>
  <td align="center"><%= f.text_field :name , :placeholder => "Name", :style => "border-radius:4px"%></td>
</tr>

<tr>
  <td style="font-weight:bold; font-size:15px"><%= f.label "Email" %></td>
  <td align="center"><%= f.text_field :emailid, :placeholder => "Email", :style => "border-radius:4px"%></td>
</tr>

<tr>
  <td style="font-weight:bold; font-size:15px"><%= f.label "Password" %></td>
  <td align="center"><%= f.password_field :password , :placeholder => "Password", :style => "border-radius:4px"%></td>
</tr>

<tr>
  <td style="font-weight:bold; font-size:15px ; padding-right:50px" ><%= f.label "Confirmation" %></td>
  <td align="center"><%= f.password_field :password_confirmation , :placeholder => "Confirmation", :style => "border-radius:4px"%></td>
</tr>

</table>
</br>

<span ><%=button_tag "Register",class: "btn btn-primary btn-block active", style: " font-weight:bold ;margin-bottom:0px" , :id => 'reg'%></span>
</br>

